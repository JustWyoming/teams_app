<h1> Find Flickr Photos </h1>

<div class="col-md-8 col-md-offset-2">
<h1>Soccer Teams</h1>

<p>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.title %></td>
      <td><%= team.desc %></td>
      <td><%= team.loc %></td>
       <td><%= form_tag results_path, :method => "get" do%>
  <%= text_field_tag :search %>
  <%= submit_tag "search", :name => nil %>
  <% end %></td>
      <td> <%= link_to 'Show team', team, :class=>'btn btn-primary'%></td>
      <td><%= link_to 'Destroy', team, :class=>'btn btn-primary',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Edit', edit_team_path(team), :class=>'btn btn-primary' %></td>
    </tr>
    </tr>
  <% end %>
</table>

</p>

<%= link_to 'Add New team', new_team_path %>

</div>
</div>
</div>